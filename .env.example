# MetaPulse Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/metapulse"

# Server Ports
BOT_PORT="3001"
WEB_PORT="3000"
PORT="3000"

# Environment
NODE_ENV="production"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="your_telegram_bot_token"
TELEGRAM_CHAT_ID="your_telegram_chat_id"

# AI Services
GROQ_API_KEY="your_groq_api_key"
GEMINI_API_KEY="your_gemini_api_key"

# PumpPortal API
PUMPPORTAL_API_KEY="your_pumpportal_api_key"

# Twitter/X API Configuration
TWITTER_CLIENT_ID="your_twitter_client_id"
TWITTER_CLIENT_SECRET="your_twitter_client_secret"
TWITTER_API_KEY="your_twitter_api_key"
TWITTER_API_KEY_SECRET="your_twitter_api_key_secret"
TWITTER_BEARER_TOKEN="your_twitter_bearer_token"
TWITTER_ACCESS_TOKEN="your_twitter_access_token"
TWITTER_ACCESS_TOKEN_SECRET="your_twitter_access_token_secret"

# External APIs
DEXSCREENER_API_URL="https://api.dexscreener.com"

# Redis Configuration
REDIS_PUBLIC_URL="redis://default:password@localhost:6379"

# API Configuration
API_BASE_URL="http://localhost:3000/api"
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Web Application Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000"
NEXT_PUBLIC_WS_URL="ws://localhost:3000"
NEXT_PUBLIC_BOT_USERNAME="@yourbot"

# Authentication
JWT_SECRET="metapulse-jwt-secret-2024-production-key"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret"