{
  "$schema": "https://railway.app/railway.schema.json",
  "comment": "Force redeploy - All fixes applied - Prisma + Logger + Lockfile",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --no-frozen-lockfile && pnpm --filter @metapulse/db build && pnpm --filter @metapulse/shared build && pnpm --filter @metapulse/api build"
  },
  "deploy": {
    "startCommand": "cd packages/db && DATABASE_URL=$DATABASE_URL pnpm prisma generate && cd ../../apps/api && pnpm start:prod",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "$PORT",
        "DATABASE_URL": "$DATABASE_URL",
        "JWT_SECRET": "metapulse-jwt-secret-2024-production-key",
        "REDIS_PUBLIC_URL": "$REDIS_PUBLIC_URL",
        "DEXSCREENER_API_URL": "$DEXSCREENER_API_URL",
        "PUMPPORTAL_API_KEY": "$PUMPPORTAL_API_KEY",
        "TWITTER_BEARER_TOKEN": "$TWITTER_BEARER_TOKEN",
        "TWITTER_API_KEY": "$TWITTER_API_KEY",
        "TWITTER_API_KEY_SECRET": "$TWITTER_API_KEY_SECRET",
        "TWITTER_ACCESS_TOKEN": "$TWITTER_ACCESS_TOKEN",
        "TWITTER_ACCESS_TOKEN_SECRET": "$TWITTER_ACCESS_TOKEN_SECRET",
        "GROQ_API_KEY": "$GROQ_API_KEY",
        "GEMINI_API_KEY": "$GEMINI_API_KEY",
        "ALLOWED_ORIGINS": "https://metapulseweb-production.up.railway.app,https://metapulsebot-production.up.railway.app"
      }
    }
  }
}
