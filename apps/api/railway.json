{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --no-frozen-lockfile && pnpm --filter @metapulse/db build && pnpm --filter @metapulse/shared build && pnpm --filter @metapulse/api build"
  },
  "deploy": {
    "startCommand": "cd apps/api && pnpm start:prod",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "$PORT",
        "DATABASE_URL": "$DATABASE_URL"
      }
    }
  }
}
