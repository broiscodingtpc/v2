{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --no-frozen-lockfile && cd apps/web && pnpm build"
  },
  "deploy": {
    "startCommand": "cd apps/web && pnpm exec next start -p $PORT",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "$PORT",
        "NEXT_PUBLIC_API_URL": "https://metapulseapi-production.up.railway.app",
        "NEXT_PUBLIC_WS_URL": "wss://metapulseapi-production.up.railway.app",
        "NEXT_PUBLIC_BOT_USERNAME": "@metapulsemetabot"
      }
    }
  }
}
