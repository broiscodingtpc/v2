{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --no-frozen-lockfile && cd apps/bot && pnpm build"
  },
  "deploy": {
    "startCommand": "cd apps/bot && pnpm start",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "DATABASE_URL": "$DATABASE_URL",
        "TELEGRAM_BOT_TOKEN": "$TELEGRAM_BOT_TOKEN",
        "TELEGRAM_CHAT_ID": "$TELEGRAM_CHAT_ID",
        "TELEGRAM_WEBHOOK_URL": "https://metapulsebot-production.up.railway.app",
        "TELEGRAM_WEBHOOK_SECRET": "metapulse-webhook-secret-2024",
        "API_BASE_URL": "https://metapulseapi-production.up.railway.app/api",
        "DEXSCREENER_API_URL": "$DEXSCREENER_API_URL",
        "GROQ_API_KEY": "$GROQ_API_KEY",
        "GEMINI_API_KEY": "$GEMINI_API_KEY"
      }
    }
  }
}