{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --no-frozen-lockfile && cd apps/worker && pnpm prisma generate && pnpm build"
  },
  "deploy": {
    "startCommand": "cd apps/worker && pnpm prisma db push && pnpm start",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": 3002,
        "DATABASE_URL": "$DATABASE_URL",
        "REDIS_PUBLIC_URL": "$REDIS_PUBLIC_URL",
        "DEXSCREENER_API_URL": "$DEXSCREENER_API_URL",
        "PUMPPORTAL_API_KEY": "$PUMPPORTAL_API_KEY",
        "TWITTER_BEARER_TOKEN": "$TWITTER_BEARER_TOKEN",
        "TWITTER_API_KEY": "$TWITTER_API_KEY",
        "TWITTER_API_KEY_SECRET": "$TWITTER_API_KEY_SECRET",
        "TWITTER_ACCESS_TOKEN": "$TWITTER_ACCESS_TOKEN",
        "TWITTER_ACCESS_TOKEN_SECRET": "$TWITTER_ACCESS_TOKEN_SECRET",
        "GROQ_API_KEY": "$GROQ_API_KEY",
        "GEMINI_API_KEY": "$GEMINI_API_KEY"
      }
    }
  }
}
