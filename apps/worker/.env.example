# Worker Service Environment Variables

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3002
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/metapulse

# Redis Configuration (for job queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External APIs
DEXSCREENER_API_URL=https://api.dexscreener.com/latest
COINGECKO_API_KEY=your_coingecko_api_key
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
COINMARKETCAP_API_URL=https://pro-api.coinmarketcap.com/v1

# AI Services
GROQ_API_KEY=your_groq_api_key
GROQ_API_URL=https://api.groq.com/openai/v1
GROQ_MODEL=mixtral-8x7b-32768
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-pro

# Twitter API
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Job Scheduling
ENABLE_SCHEDULED_JOBS=true
TOKEN_DATA_INTERVAL=300000  # 5 minutes in milliseconds
SOCIAL_DATA_INTERVAL=600000  # 10 minutes in milliseconds
AI_ANALYSIS_INTERVAL=900000  # 15 minutes in milliseconds
SIGNAL_GENERATION_INTERVAL=300000  # 5 minutes in milliseconds
CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds

# Data Collection Settings
POPULAR_TOKENS_LIMIT=100
TRENDING_TOKENS_LIMIT=50
SOCIAL_SEARCH_LIMIT=100
AI_ANALYSIS_BATCH_SIZE=10

# Rate Limiting
DEXSCREENER_RATE_LIMIT=10  # requests per second
TWITTER_RATE_LIMIT=300  # requests per 15 minutes
GROQ_RATE_LIMIT=30  # requests per minute
GEMINI_RATE_LIMIT=60  # requests per minute

# Data Processing
TECHNICAL_ANALYSIS_PERIODS=14,21,50  # RSI, SMA periods
SENTIMENT_THRESHOLD=0.1  # Minimum sentiment change to trigger analysis
SIGNAL_CONFIDENCE_THRESHOLD=0.7  # Minimum confidence for signals
SIGNAL_EXPIRY_HOURS=24  # Hours before signals expire

# Monitoring
HEALTH_CHECK_INTERVAL=60000  # 1 minute in milliseconds
METRICS_RETENTION_DAYS=30
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true

# WebSocket (for real-time updates)
WS_PORT=3003
WS_ENABLE=true

# Blockchain Networks
SUPPORTED_NETWORKS=ethereum,bsc,polygon,solana,arbitrum,optimism,avalanche

# Data Retention
SIGNAL_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=90
SOCIAL_RETENTION_DAYS=60
ANALYSIS_RETENTION_DAYS=90
JOB_LOG_RETENTION_DAYS=7

# Performance Tuning
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MS=300000  # 5 minutes
BATCH_SIZE=50
CACHE_TTL=300  # 5 minutes

# Feature Flags
ENABLE_SOCIAL_ANALYSIS=true
ENABLE_AI_ANALYSIS=true
ENABLE_TECHNICAL_ANALYSIS=true
ENABLE_SIGNAL_GENERATION=true
ENABLE_CLEANUP_JOBS=true
ENABLE_HEALTH_MONITORING=true